generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id          String    @id @default(uuid())
  firstName   String    @db.VarChar(50)
  lastName    String    @db.VarChar(50)
  email       String    @unique @db.VarChar(255)
  createdAt   DateTime  @default(now()) @db.Timestamp
}

model Auth {
  id            String      @id @default(uuid())
  user          User        @relation(fields: [userId], references: [id]) // Relationship with the User model
  userId        String      @db.Uuid
  apiKey        String      @unique @db.VarChar(100)
  clientId      String      @db.VarChar(100)
  clientSecret  String      @db.VarChar(100)
  createdAt     DateTime    @default(now()) @db.Timestamp
  updatedAt     DateTime    @updatedAt @default(now()) @db.Timestamp
}
